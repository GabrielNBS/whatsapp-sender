datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  tags      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scheduledMessages ScheduledMessage[]
}

model Template {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  media     String?  // JSON string: { data, mimetype, filename }

  scheduledMessages ScheduledMessage[]
}

model ScheduledMessage {
  id           String   @id @default(cuid())
  scheduledFor DateTime
  status       String   @default("PENDING") // PENDING, SENT, FAILED, MISSED

  contactName  String
  contactPhone String

  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Contact   Contact? @relation(fields: [contactId], references: [id])
  contactId String?

  batchId   String?  // UUID of the broadcast batch
  batchName String?  // Optional name for grouping
}

model ContactAnalytics {
  phone       String   @id
  sentCount   Int      @default(0)
  readCount   Int      @default(0)
  lastReadAt  DateTime?
  lastSentAt  DateTime?
  updatedAt   DateTime @updatedAt
}
